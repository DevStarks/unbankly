<div class="modal">

  <%= image_tag 'logo.svg' %>

  <%= link_to 'Need to sign up?', new_registration_path(resource_name), class: 'link-secondary' %>

  <%= form_for(resource, autocomplete: "off", as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "off", autofocus: true, placeholder: '' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if false && devise_mapping.rememberable? -%>

      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Submit", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'link-secondary' %>
</div>
